                        <input type='radio' name='coffee_kind' value='TEA'>TEA
                        <input type='radio' name='coffee_kind' value='ADE'>ADE
                        <input type='radio' name='coffee_kind' value='COLD BREW' checked>COLD BREW
                        <input type='radio' name='coffee_kind' value='GINGER'>GINGER
                        <input type='radio' name='coffee_kind' value='OTHER'>OTHER
                        <%}
                            if(result[0].cs_name == 'GINGER') {
                        %> 
                        <input type='radio' name='coffee_kind' value='BASIC'>BASIC
                        <input type='radio' name='coffee_kind' value='LATTE'>LATTE
                        <input type='radio' name='coffee_kind' value='SHAKE'>SHAKE
                        <input type='radio' name='coffee_kind' value='TEA'>TEA
                        <input type='radio' name='coffee_kind' value='ADE'>ADE
                        <input type='radio' name='coffee_kind' value='COLD BREW'>COLD BREW
                        <input type='radio' name='coffee_kind' value='GINGER' checked>GINGER
                        <input type='radio' name='coffee_kind' value='OTHER'>OTHER
                        <%}
                            if(result[0].cs_name == 'OTHER') {
                        %> 
                        <input type='radio' name='coffee_kind' value='BASIC'>BASIC
                        <input type='radio' name='coffee_kind' value='LATTE'>LATTE
                        <input type='radio' name='coffee_kind' value='SHAKE'>SHAKE
                        <input type='radio' name='coffee_kind' value='TEA'>TEA
                        <input type='radio' name='coffee_kind' value='ADE'>ADE
                        <input type='radio' name='coffee_kind' value='COLD BREW'>COLD BREW
                        <input type='radio' name='coffee_kind' value='GINGER'>GINGER
                        <input type='radio' name='coffee_kind' value='OTHER' checked>OTHER
                        <%}%>
                    </div>
                    <div class="form-group">
                        <label for="inputOption">옵션</label>
                        <input type='button' name'option_add' id="inputOption" class="btn btn-default pull-center" value='추가' onclick="add_item()">
                        <div id='option'>
                            <%
                                for(var idx=0; idx<result.length; idx++) {
                            %>
                            <div>
                                <label>이름</label>&nbsp;<input type='text' name='option_name' value=<%= result[idx].co_name%>>
                                &nbsp;&nbsp;<label>가격</label>&nbsp;<input type='number' name='option_price' value=<%= result[idx].o_price%>>
                                &nbsp;&nbsp;<input type='button' value='삭제' class="btn btn-default pull-center" onclick="remove_item(this)">
                            </div>
                            <%}%>
                        </div>
                        <div id='pre_set' style='display:none'>
                            <label>이름</label>&nbsp;<input type='text' name='option_name'>
                            &nbsp;&nbsp;<label>가격</label>&nbsp;<input type='number' name='option_price'>
                            &nbsp;&nbsp;<input type='button' class="btn btn-default pull-center" value='삭제' onclick="remove_item(this)">
                        </div>  
                    </div>
                    <div class="form-group">
                        <label for="inputDesc">메뉴 설명</label>
                        <textarea class="form-control" name="coffee_description" cols='81' rows='5'><%= result[0].description %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="inputPicture">사진</label>
                        <input type="file" name="userfile">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" id="coffee_submit" class="btn btn-primary">
                            공지수정<i class="fa fa-check spaceLeft"></i>
                        </button>
                        <button type="button" class="btn btn-warning" onclick='history.back()'>
                            뒤로가기<i class="fa fa-times spaceLeft"></i>
                        </button>
                    </div>
                    <input type="hidden" name="coffee_id" value=<%= result[0].coffee_id %>>
                    <%
                            for(var idx=0; idx<result.length; idx++) {
                    %>
                    <input type="hidden" name="option_id" value=<%= result[idx].option_id %>>
                    <%}%>
                </form>    
            </div>
        </article>

